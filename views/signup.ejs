<!-- signup.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-to-r from-gray-500 via-gray-700 to-gray-900 flex justify-center items-center h-screen">

    <div class="w-full max-w-xs p-3 rounded-lg shadow-lg bg-black bg-opacity-30 backdrop-blur-sm">

        <h2 class="text-lg font-medium text-center text-gray-200 mb-3">Sign Up</h2>
        <form action="/signup" method="POST" class="space-y-2">
            <div>
                <label for="username" class="block text-xs font-medium text-gray-200">Username</label>
                <input type="text" id="username" name="username"
                    class="w-full px-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500"
                    required>
            </div>
            <div>
                <label for="email" class="block text-xs font-medium text-gray-200">Email</label>
                <input type="email" id="email" name="email"
                    class="w-full px-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500"
                    required>
            </div>
            <div>
                <label for="password" class="block text-xs font-medium text-gray-200">Password</label>
                <input type="password" id="password" name="password"
                    class="w-full px-2 border border-gray-300 rounded-md text-sm focus:outline-none focus:ring-1 focus:ring-blue-500"
                    required>
            </div>
            <div>
                <button type="submit"
                    class="w-full py-1.5 px-3 bg-blue-500 text-gray-200 text-sm rounded-md hover:bg-blue-600">Sign
                    Up</button>
            </div>
        </form>
        <p class="text-center text-xs text-gray-200 mt-2">Already have an account? <a href="/"
                class="text-blue-500 hover:text-blue-700">Login here</a></p>
    </div>
</body>

</html>